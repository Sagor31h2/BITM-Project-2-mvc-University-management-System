@model UniversityCourseManagementSystem.Models.Course

@{
    ViewBag.Title = "title";
}

@section styles
{
    <style>
        .field-validation-error {
            color: red;
        }

        .input-validation-error {
            border: 1px red solid;
        }
    </style>
}
<div class="all-content-wrapper">
    <div class="card">
        <u>
            <h2>Save Course</h2><br /><br />
        </u>
        @using (Html.BeginForm())
        {
            <div class="form-group row">
                @Html.LabelFor(m => m.CourseCode, htmlAttributes: new {@class = "col-form-label col-md-2"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.CourseCode, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(x => x.CourseCode, " ", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.CourseName, htmlAttributes: new {@class = "col-form-label col-md-2"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.CourseName, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(x => x.CourseName, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Credit, htmlAttributes: new {@class = "col-form-label col-md-2"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Credit, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(x => x.Credit, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "col-form-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(dp => dp.DepartmentId, htmlAttributes: new {@class = "col-form-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownListFor(dp => dp.DepartmentId, new SelectList(ViewBag.Departments, "Value", "Text"), new {@class = "form-control"})
                    @Html.ValidationMessageFor(dp => dp.DepartmentId, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(dp => dp.SemesterId, htmlAttributes: new { @class = "col-form-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(dp => dp.SemesterId, new SelectList(ViewBag.Semester, "Value", "Text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(dp => dp.SemesterId, "", new { @class = "text-danger" })
                </div>
            </div>
            <input type="submit" id="Register" class="btn btn-primary" value="Save"/>
            <div class="form-group">
                <b><i><label for="Massage">@ViewBag.Message</label></i></b>
            </div>
        }
    </div>
</div>